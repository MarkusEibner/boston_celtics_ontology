@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ex: <https://github.com/MarkusEibner/boston_celtics_ontology/blob/main/boston_rdfs_ontology2.ttl#> . 

# Classes
ex:Person a rdfs:Class .
ex:Athlete a rdfs:Class ;
    rdfs:subClassOf ex:Person .
ex:BasketballPlayer a rdfs:Class ;
    rdfs:subClassOf ex:Athlete .

ex:Team a rdfs:Class .

# Properties
ex:hasName a rdf:Property ;
    rdfs:domain ex:Person ;
    rdfs:range xsd:string .

ex:hasTeam a rdf:Property ;
    rdfs:domain ex:BasketballPlayer ;
    rdfs:range ex:Team .

ex:hasNumber a rdf:Property ;
    rdfs:domain ex:BasketballPlayer ;
    rdfs:range xsd:integer .

ex:hasPosition a rdf:Property ;
    rdfs:domain ex:BasketballPlayer ;
    rdfs:range xsd:string .

ex:hasHeight a rdf:Property ;
    rdfs:domain ex:BasketballPlayer ;
    rdfs:range xsd:float .

ex:hasWeight a rdf:Property ;
    rdfs:domain ex:BasketballPlayer ;
    rdfs:range xsd:float .

ex:hasNationality a rdf:Property ;
    rdfs:domain ex:BasketballPlayer ;
    rdfs:range xsd:string .

ex:hasAge a rdf:Property ;
    rdfs:domain ex:BasketballPlayer ;
    rdfs:range xsd:integer .

ex:hasBirthdate a rdf:Property ;
    rdfs:domain ex:BasketballPlayer ;
    rdfs:range xsd:date .

ex:hasExperience a rdf:Property ;
    rdfs:domain ex:BasketballPlayer ;
    rdfs:range xsd:integer .

ex:hasBio a rdf:Property ;
    rdfs:domain ex:BasketballPlayer ;
    rdfs:range xsd:string .

# Sample individual (Jaylen Brown)
ex:JaylenBrown a ex:BasketballPlayer ;
    ex:hasName "Jaylen Brown" ;
    ex:hasTeam ex:BostonCeltics ;
    ex:hasNumber 7 ;
    ex:hasPosition "Guard-Forward" ;
    ex:hasHeight 1.98 ;
    ex:hasWeight 101 ;
    ex:hasNationality "USA" ;
    ex:hasAge 27 ;
    ex:hasBirthdate "1996-10-24"^^xsd:date ;
    ex:hasExperience 8 .

# Declare Boston Celtics Team properly
ex:BostonCeltics a ex:Team ;
    ex:hasName "Boston Celtics" .
